{
  "name": "pcre2",
  "version": "10.40",
  "port-version": 2,
  "description": "Regular Expression pattern matching using the same syntax and semantics as Perl 5.",
  "homepage": "https://github.com/PCRE2Project/pcre2",
  "license": "BSD-3-Clause",
  "dependencies": [
    {
      "name": "bzip2",
      "default-features": false
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    "zlib"
  ],
  "features": {
    "jit": {
      "description": "Enable support for Just-In-Time compiling",
      "supports": "!emscripten"
    },
    "bzip2": {
      "description": "Enable support for bzip2",
      "dependencies": [
        {
          "name": "bzip2",
          "default-features": false
        }
      ]
    },
    "zlib": {
      "description": "Enable support for zlib",
      "dependencies": [
        "zlib"
      ]
    }
  }
}
